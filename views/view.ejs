  <%if (is_admin == 1){%>
  <script type="text/javascript">
  function deleteClient(){
    $.ajax({
      url: '../delete_client',
      type: 'POST',
      data: {
        client_id: <%=client_id%>,
        user_token: "<%=user_token%>"
      },
      success: function (data) {
        alert(data.message);
        if(data.message == "Deleted"){
          window.location.replace("../../"); 
        }
      }, // close 'success'
      error: function (error) {
        alert(JSON.stringify(error));
      },
    }); // close AJAX call
  }
  </script>
  <%}%>
