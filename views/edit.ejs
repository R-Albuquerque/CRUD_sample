<h1>Edit Client</h1>

<br>
<h1 class='text-center'>Edit Client</h1>
<hr>

<div class="container">
  <form class="" action="./register_client" method="post">
    <div class="form-group">
      <label for="rname">Name:</label>
      <input value="<%=name%>" type="text" class="form-control" id="" placeholder="Client name" name="name" required>
    </div>

    <div class="form-row">
        <label for="emails">Email:</label>
    </div>

    <div class=" form-group emailbox" id='emailbox'>
      <!-- <button class="btn btn-info">Desserts</button> -->
    </div>

    <div class="form-row">
      <div class="form-group col-md-4">

        <input value="sample@mail.com" type="text" class="form-control" id="emails" placeholder="Add email...">
      </div>
      <div class="col-auto">
      <input type="button" id="addemail" class="btn btn-primary mb-2" value='Add email'>
    </div>
    </div>
    <input type="hidden" id='emaillist' name="emails" required>
    <span class="warn" id="emailwarn"></span>

<!-- =========================== Telephone ============== -->
<div class="form-row">
  <label for="phones">Phone:</label>
</div>

<div class=" form-group phonebox" id='phonebox'>
<!-- <button class="btn btn-info">Desserts</button> -->
</div>

<div class="form-row">

  <div class="form-group col-md-2">
    <select id="countryCode" class="custom-select">
      <option selected>Country Code</option>
    </select>
  </div>

<div class="form-group col-md-4">

  <input value="(61)90000-0000" type="text" class="form-control" id="phones" placeholder="Add phone number...">
</div>

<div class="col-auto">
<input type="button" id="addphone" class="btn btn-primary mb-2" value='Add'>
</div>
</div>
<input type="hidden" id='phonelist' name="phones" required>
<span class="warn" id="phonewarn"></span>

 <!-- ============== Number (CPF) ================== -->
  <div class="form-row">
      <label for="cpf">Number (CPF):</label>
  </div>

  <div class="form-row">
    <div class="form-group col-md-4">
      <input value="<%=cpf%>" required name="cpf" type="text" class="form-control cpf" id="cpf" placeholder="000.000.000-00">
    </div>
  </div>
  <span class="warn" id="cpfwarn"></span>

  <!-- =================== address ================ -->
  <hr>

  <div class="form-row">
    <label for="">Address</label>
  </div>
  <div class="row">
    <div class="col-md-4">
      <label for="inputCountry" class="form-label">Country</label>
      <select name="country" id="inputCountry" class="custom-select" onchange="selectProvinces(this.value)">
        <option selected>Choose...</option>
      </select>
      <!-- <input type="text" class="form-control" id="inputCountry"> -->
    </div>
    <div class="col-md-4">
      <label for="inputState" class="form-label">State</label>
      <select id="inputState" name="state" class="custom-select">
      </select>
    </div>
    <div class="col-md-4">
      <label for="inputCity" class="form-label">City</label>
      <input type="text" name="city" class="form-control" id="inputCity" value="Brasilia" required>
    </div>
    <div class="col-12">
      <label for="inputAddress" class="form-label">Address Line 1</label>
      <input name="address1" required type="text" class="form-control" id="inputAddress" value="Example street, number 00" placeholder="Neighbourhood, street, number">
    </div>
    <div class="col-12">
      <label for="inputAddress2" class="form-label">Address Line 2</label>
      <input name="address2" type="text" class="form-control" id="inputAddress2" placeholder="House n., apartment, or floor">
    </div>

      
      <div class="col-md-6">
        <label for="cep">CEP (Zip Code):</label>
      <input required value="<%=cep%>" name="cep" type="text" class="form-control cep" id="cep" placeholder="00000-000">
      </div>
  
  <span class="warn" id="cepwarn"></span>

  </div>
 
  <br><hr>
<!-- ================================ -->

    <div class="form-group">
      <button class="btn btn-success" type="submit">Confirm Edit</button>
      <button class="btn btn-danger" type="button" onclick="cancelEdit()">Cancel</button>
      <div class="fclist">
        <p class='fieldcheck' id="noemail"></p>
        <p class='fieldcheck' id="nophone"></p>
      </div>
    </div>

  </form>
